.dialog{
    width:100%;
    height:100%;
    position:fixed;
    left:0;top:0;
    z-index:10;
}
.dialog .bg{
    position:absolute;
    background:rgba(0,0,0,.5);
    left:0;top:0;
    width:100%;height:100%;
}

.dialog .main{
    position: absolute;
    left:50%;top:50%;
    width:538rpx;
    transform: translate(-50%,-50%);
}
/* 动画 */
.dialog.active {
    animation:mymove1 0.2s ;
    -webkit-animation:mymove1 0.2s; /* Safari 和 Chrome */
}
@keyframes mymove1 {
    0%{
        opacity: 0;
        
    }
    100%{
        opacity: 1;
    }
}

.dialog .close{
    width:76rpx;
    height:76rpx;
    position: absolute;
    top:-20rpx;right:-20rpx;
    z-index: 2;
}
.dialog .main image{
    
}
.dialog .main .txt{
    position: absolute;
    left:0;top:0;
    height: 100%;
    z-index: 1;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.dialog .main text{
    /* height: 100%; */
    width: 100%;
    color:#000;
    font-size: 13px;
    line-height: 20px;
    text-align: center;
}


