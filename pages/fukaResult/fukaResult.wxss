}

.tip{
    width:163rpx;
    margin:20rpx auto 0;
}

.btn-box{
    width:421rpx;
    height:79rpx;
    margin:20rpx auto 0;
    position: relative;
    /* position: absolute;
    bottom:20rpx;
    left:50%;
    transform: translateX(-50%); */
}
.btn-box button{
    position: absolute;
    left:0;top:0;
    width:100%;
    height:100%;
    opacity: 0;
}
