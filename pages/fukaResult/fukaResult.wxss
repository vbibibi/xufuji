view{
    width:100%;
    box-sizing: border-box;
}
image {
    display: block;
    width: 100%;
}

.home-btn{
    width: 60rpx;
    height: 60rpx;
    position: fixed;
    left:20rpx;
    top:20rpx;
    z-index: 10;
    background-color: rgba(0,0,0,.4);
    border-radius: 100%;
    padding:12rpx;
}


.txt-box {
    width:317rpx;
    margin:0 auto;
}
.fukaResult-box{
    position: relative;
    z-index: 1;
    min-height: 400rpx;
}
.fuka-box .fuka-li{
    width:245rpx;
    display: inline-block;
    /* margin-left:-48rpx; */
    margin-top:0rpx;
    position:relative;
}
.fuka-box .fuka-li .bg {
    background-color:#000;
    opacity: 0.5;
    /* width: 66%; */
    /* height: 77%; */
    width: 75%;
    height:80%;
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    /* left: 48rpx;
    top: 48rpx; */

}
.fuka-box .fuka-li:first-child{
    /* transform: translateX(130rpx); */
    margin-left: 126rpx;
}
